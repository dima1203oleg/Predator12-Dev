{
  "policy": {
    "description": "ILM for customs indices with hot->warm->cold",
    "default_state": "hot",
    "states": [
      {
        "name": "hot",
        "actions": [
          { "rollover": { "min_size": "25gb", "min_index_age": "7d" } }
        ],
        "transitions": [
          { "state_name": "warm", "conditions": { "min_index_age": "14d" } }
        ]
      },
      {
        "name": "warm",
        "actions": [
          { "replica_count": { "number_of_replicas": 1 } },
          { "index_priority": { "priority": 50 } }
        ],
        "transitions": [
          { "state_name": "cold", "conditions": { "min_index_age": "30d" } }
        ]
      },
      {
        "name": "cold",
        "actions": [
          { "read_only": {} },
          { "index_priority": { "priority": 0 } }
        ],
        "transitions": []
      }
    ],
    "ism_template": [
      { "index_patterns": ["customs_safe-*", "customs_restricted-*"] , "priority": 100 }
    ]
  }
}
