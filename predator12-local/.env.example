KC_DB_USERNAME=postgres
KC_DB_PASSWORD=postgres

# Streaming (Redpanda/Kafka)
KAFKA_BROKERS=redpanda:9092

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
LOKI_URL=http://loki:3100
PROMETHEUS_URL=http://prometheus:9090
TEMPO_URL=http://tempo:3200
PROM_PUSHGATEWAY_URL=

# Model SDK
MODEL_SDK_BASE_URL=http://modelsdk:3010
MODEL_SDK_KEY=dev-model-sdk-key-change-in-production

# Model Gateway (ваш SDK)
MODEL_GATEWAY_URL=http://models-gateway:8080
MODEL_GATEWAY_TOKEN=replace_me_with_real_token

# Billing/Plans
BILLING_PLAN=dev-free
RATE_LIMIT_RPS=50
ORG_MONTHLY_BUDGET_USD=300
PER_USER_DAILY_BUDGET_USD=3

# Security
PII_MASK_BY_DEFAULT=true
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET=dev-jwt-secret-change-in-production

# Agents Configuration
AGENTS_ENABLED=true
SELF_IMPROVEMENT_ENABLED=true
AUTO_HEAL_ENABLED=true
SELF_DIAGNOSIS_ENABLED=true

# Self-Improvement Agent
ANALYSIS_INTERVAL=300
IMPROVEMENT_THRESHOLD=0.8

# Auto-Heal Agent
HEAL_CHECK_INTERVAL=60
CPU_THRESHOLD=85
MEMORY_THRESHOLD=90
ERROR_RATE_THRESHOLD=0.05

# Self-Diagnosis Agent
ANALYSIS_WINDOW_MINUTES=15
DIAGNOSIS_CONFIDENCE_THRESHOLD=0.7

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Celery
CELERY_CONCURRENCY=4
CELERY_BROKER_URL=redis://:redis_secure_pass@redis:6379/1
CELERY_RESULT_BACKEND=redis://:redis_secure_pass@redis:6379/1

