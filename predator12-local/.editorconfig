# ==========================================
# EDITORCONFIG - Cross-Editor Code Style
# ==========================================

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python
[*.py]
indent_size = 4
max_line_length = 100

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# JSON
[*.json]
indent_size = 2

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

# Go
[*.go]
indent_style = tab

# Docker
[Dockerfile*]
indent_size = 2

# Helm templates
[*.tpl]
indent_size = 2

# Git commit messages
[COMMIT_EDITMSG]
max_line_length = 72
